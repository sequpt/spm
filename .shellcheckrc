# Set `sh` as the shell for all scripts
shell=sh
# Let shellcheck access sourced files
external-sources=true
# Additional checks
# See https://github.com/koalaman/shellcheck/wiki/optional
enable=add-default-case           # Suggest adding a default case in `case` statements
enable=avoid-nullary-conditions   # Suggest explicitly using -n in `[ $var ]`
enable=check-extra-masked-returns # Check for additional cases where exit codes are masked
enable=check-unassigned-uppercase # Warn when uppercase variables are unassigned
enable=deprecate-which            # Suggest 'command -v' instead of 'which'
enable=quote-safe-variables       # Suggest quoting variables without metacharacters
